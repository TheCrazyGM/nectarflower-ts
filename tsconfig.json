{
    "compilerOptions": {
      "target": "ES2017",                        
      "module": "ESNext",                        
      "declaration": true,                       
      "declarationMap": true,                    
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",                
      "skipLibCheck": true,
      "resolveJsonModule": true,                 
      "forceConsistentCasingInFileNames": true,
      "noEmitOnError": true                      
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "**/*.test.ts", "**/__tests__"]
  }
  